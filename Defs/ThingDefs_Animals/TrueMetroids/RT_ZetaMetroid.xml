		<modExtensions>
      <li Class="DD.VerbSettingExtension">
			  <useExtendedVerbs>true</useExtendedVerbs>
		  </li>
		  <li Class="DD.GainAbilityExtension">
			  <abilityDef>RT_ZetaFireball</abilityDef>
			  <minAge>-1</minAge>
		  </li>
      <li Class="DD.GainAbilityExtension">
        <abilityDef>RT_ZetaAcitSpit</abilityDef>
			  <minAge>-1</minAge>
		  </li>
			<li Class="RT_RimTroid.HungerBerserkOptions">
				<hungerBerserkChanges>
					<!-- key: hunger level, value: berserk change, if the value is 0, the berserk state will stop -->
					<li>
						<key>0.0</key>
						<value>0.25</value>
					</li>
					<li>
						<key>0.1</key>
						<value>0.15</value>
					</li>
					<li>
						<key>0.2</key>
						<value>0.06</value>
					</li>
					<li>
						<key>0.3</key>
						<value>0.03</value>
					</li>
					<li>
						<key>0.4</key>
						<value>0</value>
					</li>
				</hungerBerserkChanges>
				<chanceToBecomeWildIfBerserkAndTamed>0.4</chanceToBecomeWildIfBerserkAndTamed>
			</li>
		</modExtensions>
	</PawnKindDef>
</Defs>