		  <body>RT_OmegaBody</body>
		  <baseBodySize>2.5</baseBodySize>
		  <baseHealthScale>1.8</baseHealthScale>
		  <baseHungerRate>1</baseHungerRate>
		  <hasGenders>false</hasGenders>
