<?xml version="1.0" encoding="UTF-8"?>
<Defs>

 <!-- Gamma Abilities -->

  <AbilityDef>
	<defName>RT_GammaElectricBolt</defName>
	<label>Electric bolt</label>
	<description>Fire an electric bolt at a target</description>
	<abilityClass>DD.Ability_AutoCastableVerb</abilityClass>
	<canUseAoeToGetTargets>true</canUseAoeToGetTargets>
	<cooldownTicksRange>1000~1400</cooldownTicksRange>
	<displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
	<disableGizmoWhileUndrafted>false</disableGizmoWhileUndrafted>
	<verbProperties>
		<verbClass>DD.Verb_Shoot_Ability</verbClass>
		<accuracyTouch>0.95</accuracyTouch>
		<accuracyShort>0.60</accuracyShort>
		<accuracyMedium>0.50</accuracyMedium>
		<accuracyLong>0.30</accuracyLong>
		<hasStandardCommand>false</hasStandardCommand>
		<defaultProjectile>RT_GammaBolt</defaultProjectile>
		<warmupTime>0.5</warmupTime>
		<range>35</range>
		<burstShotCount>1</burstShotCount>
		<ticksBetweenBurstShots>2</ticksBetweenBurstShots>
		<minRange>1</minRange>
		<soundCast>ElectricBoltShot</soundCast>
		<muzzleFlashScale>1</muzzleFlashScale>
	</verbProperties>
	<comps>
		<li Class="DD.AbilityCompProperties_AttackVerb">
			<compClass>DD.AbilityComp_AttackVerb</compClass>
			<autoUse>true</autoUse>
			<gizmoOnText>Electric Bolt Enabled</gizmoOnText>
			<gizmoOffText>Electric Bolt Disabled</gizmoOffText>
			<gizmoOnIconPath>AnimalProjectile/GammaBolt</gizmoOnIconPath>
			<gizmoOffIconPath>AnimalProjectile/GammaBolt</gizmoOffIconPath>
			<gizmoDesc>Toggle Electric Bolt Usage (Ranged)</gizmoDesc>
		</li>
	</comps>
 </AbilityDef>

