<?xml version="1.0" encoding="utf-8" ?>
<Defs>


<!--The following dictates which age changes the 'Mitosis' hediff to the next stage-->


  <HediffGiverSetDef>
    <defName>RT_EvoGrowth_Miniroid</defName>
    <hediffGivers>
        <li Class="RT_Core.HediffGiver_AfterPeriod">
            <!--<maxReroll>1</maxReroll>-->
            <chance>0.9</chance>
            <yearsInterval>1</yearsInterval>
            <hediffsToPreventGrowth>
              <li>RT_StuntedGrowthBad</li>
              <li>RT_StuntedGrowthNeutral</li>
              <li>RT_StuntedGrowthGood</li>
              <li>RT_GrowthSuspenderHediff</li>
            </hediffsToPreventGrowth >
            <possibleEvolutionPaths>
                <li>
                  <requiredAge>14</requiredAge>
                  <hediff>RT_PhazonMetroidState</hediff>
                  <partsToAffect>
                    <li>RT_Mitosis</li>
                  </partsToAffect>
                    <weight>1</weight>
								<hediffWhiteList>
									<li>RT_PhazonMetroidWhitelist</li>
								</hediffWhiteList>                
                </li>
            </possibleEvolutionPaths>
        </li>
		</hediffGivers>
	</HediffGiverSetDef>


  <HediffGiverSetDef>
    <defName>RT_EvoGrowth_PhazonMetroid</defName>
    <hediffGivers>
        <li Class="RT_Core.HediffGiver_AfterPeriod">
            <maxReroll>3</maxReroll>
            <chance>0.4</chance>
            <yearsInterval>1~3</yearsInterval>
            <hediffsToPreventGrowth>
              <li>RT_StuntedGrowthBad</li>
              <li>RT_StuntedGrowthNeutral</li>
              <li>RT_StuntedGrowthGood</li>
              <li>RT_GrowthSuspenderHediff</li>
            </hediffsToPreventGrowth >
            <possibleEvolutionPaths>
                <li>
                  <requiredAge>40</requiredAge>
                  <hediff>RT_HopperState</hediff>
                  <partsToAffect>
                    <li>RT_Mitosis</li>
                  </partsToAffect>
                    <weight>1.5</weight>
								<hediffWhiteList>
									<li>RT_HopperWhitelist</li>
								</hediffWhiteList>                
                </li>
              <li>
                <requiredAge>50</requiredAge>
                <hediff>RT_RavagerState</hediff>
                <partsToAffect>
                    <li>RT_Mitosis</li>
                </partsToAffect>
                <weight>1</weight>
								<hediffWhiteList>
									<li>RT_RavagerWhitelist</li>
								</hediffWhiteList>   
              </li>
              <li>
                <requiredAge>60</requiredAge>
                <hediff>RT_HatcherState</hediff>
                <partsToAffect>
                    <li>RT_Mitosis</li>
                </partsToAffect>
                <weight>1</weight>
								<hediffWhiteList>
									<li>RT_HatcherWhitelist</li>
								</hediffWhiteList>   
              </li>
            </possibleEvolutionPaths>
        </li>
		</hediffGivers>
	</HediffGiverSetDef>


  <HediffGiverSetDef>
    <defName>RT_EvoGrowth_Hopper</defName>
    <hediffGivers>
        <li Class="RT_Core.HediffGiver_AfterPeriod">
            <maxReroll>1</maxReroll>
            <chance>0.2</chance>
            <yearsInterval>25~50</yearsInterval>
            <hediffsToPreventGrowth>
              <li>RT_StuntedGrowthBad</li>
              <li>RT_StuntedGrowthNeutral</li>
              <li>RT_StuntedGrowthGood</li>
              <li>RT_GrowthSuspenderHediff</li>
            </hediffsToPreventGrowth >
            <possibleEvolutionPaths>
                <li>
                  <requiredAge>1986</requiredAge>
                  <hediff>RT_PrimeState</hediff>
                  <partsToAffect>
                    <li>RT_Mitosis</li>
                  </partsToAffect>
                    <weight>1</weight>
								<hediffWhiteList>
									<li>RT_PrimeWhitelist</li>
								</hediffWhiteList>                
                </li>
            </possibleEvolutionPaths>
        </li>
		</hediffGivers>
	</HediffGiverSetDef>



