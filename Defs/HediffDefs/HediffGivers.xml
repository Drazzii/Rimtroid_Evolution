<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<HediffGiverSetDef>
  <defName>RT_Rimtroid_EvolutionGrowth</defName>
  <hediffGivers>
    <li Class="RT_Rimtroid.HediffGiver_AfterPeriod">
      <stuntedHediffDef>RT_StuntedGrowth</stuntedHediffDef>
      <hediff>RT_BanteeState</hediff>
			<partsToAffect>
              <li>RT_Mitosis</li>
            </partsToAffect>
		<targetAgeRange>0.00001~6</targetAgeRange> <!-- in years -->
    </li>
    <li Class="RT_Rimtroid.HediffGiver_AfterPeriod">
      <stuntedHediffDef>RT_StuntedGrowth</stuntedHediffDef>
      <hediff>RT_LarvaeState</hediff>
			<partsToAffect>
              <li>RT_Mitosis</li>
            </partsToAffect>
		<targetAgeRange>7~80</targetAgeRange> <!-- in years -->
    </li>
    <li Class="RT_Rimtroid.HediffGiver_AfterPeriod">
      <stuntedHediffDef>RT_StuntedGrowth</stuntedHediffDef>
      <hediff>RT_AlphaState</hediff>
			<partsToAffect>
              <li>RT_Mitosis</li>
            </partsToAffect>
		<targetAgeRange>81~170</targetAgeRange> <!-- in years -->
    </li>
    <li Class="RT_Rimtroid.HediffGiver_AfterPeriod">
      <stuntedHediffDef>RT_StuntedGrowth</stuntedHediffDef>
      <hediff>RT_GammaState</hediff>
			<partsToAffect>
              <li>RT_Mitosis</li>
            </partsToAffect>
		<targetAgeRange>171~350</targetAgeRange> <!-- in years -->
    </li>
    <li Class="RT_Rimtroid.HediffGiver_AfterPeriod">
      <stuntedHediffDef>RT_StuntedGrowth</stuntedHediffDef>
      <hediff>RT_ZetaState</hediff>
			<partsToAffect>
              <li>RT_Mitosis</li>
            </partsToAffect>
		<targetAgeRange>351~750</targetAgeRange> <!-- in years -->
    </li>
    <li Class="RT_Rimtroid.HediffGiver_AfterPeriod">
      <stuntedHediffDef>RT_StuntedGrowth</stuntedHediffDef>
      <hediff>RT_OmegaState</hediff>
			<partsToAffect>
              <li>RT_Mitosis</li>
            </partsToAffect>
		<targetAgeRange>751~1894</targetAgeRange> <!-- in years -->
    </li>
  </hediffGivers>
</HediffGiverSetDef>

