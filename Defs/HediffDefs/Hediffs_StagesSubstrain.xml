<!--===============Hunter Metroid===============-->

  <HediffDef ParentName="RT_MetroidStages">
    <defName>RT_HunterState</defName>
    <label>Evolution (Hunter)</label>
    <labelNoun>a Hunter Metroid</labelNoun>
    <description>A Hunter Metroid.</description>
    <stages>
      <li>
	      <hungerRateFactorOffset>0.2</hungerRateFactorOffset>
	      <restFallFactorOffset>0.3</restFallFactorOffset>
        <naturalHealingFactor>1</naturalHealingFactor>
        <painFactor>0.7</painFactor>
	    <capMods>
				<li>
					<capacity>Moving</capacity>
					<offset>0.4</offset>
				</li>
				<li>
					<capacity>Eating</capacity>
					<offset>-0.2</offset>
				</li>
				<li>
					<capacity>Sight</capacity>
					<offset>-0.05</offset>
				</li>
				<li>
					<capacity>BloodFiltration</capacity>
					<offset>0.1</offset>
				</li>
				<li>
					<capacity>Metabolism</capacity>
					<offset>-0.2</offset>
				</li>
		</capMods>
      </li>
    </stages>
    <comps>
      <li Class="RandomMetamorphosis.HediffCompProperties">
	    	<stuntedHediffDef>RT_GrowthSuspenderHediff</stuntedHediffDef>
				<yearsUntilReroll>10</yearsUntilReroll>
				<unlimitedRerolls>false</unlimitedRerolls>
				<maxRerolls>5</maxRerolls>
				<possibleEvolutionPaths>
					<li>
						<age>40</age>
						<kind>RT_MetroidHunter</kind>
						<weight>0.3</weight>
					</li>
					<li>
						<age>40</Age>
						<kind>RT_FissionMetroid</kind>
						<weight>0.1</weight>
					</li>
				</possibleEvolutionPaths>
        <whitelists>
					<li>RT_HunterStateWhitelist</li>
				</whitelists>
      </li>
    </comps>
  </HediffDef>

