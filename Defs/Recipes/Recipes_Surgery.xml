<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef Name="RT_SurgeryMetroid" Abstract="True" >
		<effectWorking>Surgery</effectWorking>
		<soundWorking>Recipe_Surgery</soundWorking>
		<workSpeedStat>MedicalOperationSpeed</workSpeedStat>
		<workSkill>Medicine</workSkill>
		<workSkillLearnFactor>16</workSkillLearnFactor>
    <workAmount>1200</workAmount>
		<surgerySuccessChanceFactor>99999</surgerySuccessChanceFactor>
    <anesthetize>true</anesthetize>
	</RecipeDef>

	<!-- =============== Cryoadapter =============== -->

	<RecipeDef ParentName="RT_SurgeryMetroid">
		<defName>RT_InstallCryoadapter</defName>
		<label>Force cryoadaption</label>
		<description>Administer an injection that forces adaption to colder temperatures.</description>
		<workerClass>Recipe_InstallArtificialBodyPart</workerClass>
		<jobString>Forcing metroid cryoadaption.</jobString>
		<skillRequirements>
			<Medicine>8</Medicine>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>RT_Cryoadapter</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<thingDefs>
				<li>RT_Cryoadapter</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>RT_Membrane</li>
		</appliedOnFixedBodyParts>
		<addsHediff>RT_CryoadapterHediff</addsHediff>
<recipeUsers>
      <li>RT_BanteeMetroid</li>
      <li>RT_MetroidLarvae</li>
    </recipeUsers>
	</RecipeDef>

	<!-- =============== Nutrient Regulator =============== -->

	<RecipeDef ParentName="RT_SurgeryMetroid">
		<defName>RT_InstallNutrientRegulator</defName>
		<label>Force nutrient regulation</label>
		<description>Administer an injection that allows better nutrient efficiency.</description>
		<workerClass>Recipe_InstallArtificialBodyPart</workerClass>
		<jobString>Forcing nutrient regulation.</jobString>
		<skillRequirements>
			<Medicine>8</Medicine>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>RT_NutrientRegulator</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<thingDefs>
				<li>RT_NutrientRegulator</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>RT_Membrane</li>
		</appliedOnFixedBodyParts>
		<addsHediff>RT_NutrientRegulatorHediff</addsHediff>
<recipeUsers>
      <li>RT_BanteeMetroid</li>
      <li>RT_MetroidLarvae</li>
    </recipeUsers>
	</RecipeDef>

</Defs>