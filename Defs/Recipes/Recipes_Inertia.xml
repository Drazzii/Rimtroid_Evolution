<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>RT_CreateInertia</defName>
		<label>Synthesize Inertia</label>
		<description>Mix metroid tissue and uranium to create a crude mix of the Inertia serum.</description>
		<jobString>Synthesizing Inertia</jobString>
		<workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
		<workSkill>Intellectual</workSkill>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<workAmount>400</workAmount>
		<targetCountAdjustment>1</targetCountAdjustment>
		<recipeUsers>
			<li>DrugLab</li>
		</recipeUsers>		
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Uranium</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>			
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>Uranium</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<RT_Inertia>1</RT_Inertia>
		</products>
		<skillRequirements>
			<Intellectual>8</Intellectual>
		</skillRequirements>
		<!-- <researchPrerequisite>RT_BasicDrugResearch</researchPrerequisite> -->
	</RecipeDef>
	
