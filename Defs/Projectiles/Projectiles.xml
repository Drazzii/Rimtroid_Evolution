	<ThingDef Abstract="True" Name="RT_Bullet_LaserColored" ParentName="Bullet_LaserGeneric">
		<seam>0.25</seam>
		<textures>
			<li>AnimalProjectile/GammaBolt</li>
		</textures>
	</ThingDef>

		<ThingDef Abstract="True" Name="RT_Bullet_FireBeam" ParentName="Bullet_LaserGeneric">
		<seam>0.25</seam>
		<textures>
			<li>AnimalProjectile/FireBeam1</li>
		</textures>
	</ThingDef>   
	
	<ThingDef ParentName="RT_Bullet_LaserColored" Class="RT_Rimtroid.LaserBeamDef">
		<defName>RT_GammaBolt</defName>
		<thingClass>RT_Rimtroid.LaserBeam</thingClass>
		<label>Electic Bolt</label>
		<graphicData>
			<shaderType>TransparentPostLight</shaderType>
			<texPath>AnimalProjectile/GammaBolt</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<flyOverhead>false</flyOverhead>
			<speed>10000</speed>
			<damageDef>Flame</damageDef>
			<explosionRadius>1</explosionRadius>
			<damageAmountBase>2</damageAmountBase>
			<soundExplode>SoundBolt</soundExplode>
		</projectile>
        <beamWidth>4.5</beamWidth>
        <lifetime>16</lifetime>
	</ThingDef>
	
	
	<ThingDef ParentName="RT_Bullet_FireBeam" Class="RT_Rimtroid.LaserBeamDef">
		<defName>RT_OmegaBeam</defName>
		<thingClass>RT_Rimtroid.LaserBeam</thingClass>
		<label>Firebeam</label>
		<graphicData>
			<shaderType>TransparentPostLight</shaderType>
			<texPath>AnimalProjectile/Firebeam1</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<flyOverhead>false</flyOverhead>
			<speed>10000</speed>
			<damageDef>Flame</damageDef>
			<explosionRadius>1</explosionRadius>
			<damageAmountBase>2</damageAmountBase>
			<soundExplode>SoundBolt</soundExplode>
		</projectile>
        <beamWidth>3</beamWidth>
		<fireWidth>0</fireWidth>
		<spawnFire>true</spawnFire>
		<dontSpawnFireOnCaster>true</dontSpawnFireOnCaster>
		<fireDistanceFromCaster>1</fireDistanceFromCaster>
        <lifetime>150</lifetime>
	</ThingDef>

