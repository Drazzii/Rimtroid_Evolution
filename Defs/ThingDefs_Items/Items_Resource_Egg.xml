<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=====================================================================-->
  <!--=============================== Eggs ================================-->
  <!--=====================================================================-->


  <!-- Larvae Egg -->
  
  <ThingDef ParentName="EggUnfertBase">
    <defName>Rimtroid_EggUnfert</defName>
    <label>metroid egg (unfert.)</label>
    <description>An unfertilized metroid egg. It can be eaten raw, but it's much, much better cooked.</description>
    <graphicData>
      <texPath>Things/AnimalProduct/RT_MetroidEgg</texPath>
    </graphicData>
    <statBases>
      <MarketValue>30.0</MarketValue>
    </statBases>
  </ThingDef>

  <ThingDef ParentName="EggFertBase">
    <defName>Rimtroid_MetroidEggFertilized</defName>
    <label>metroid egg (fert.)</label>
    <description>A fertilized metroid egg. If all goes well, it will hatch into a metroid larvae. It can be eaten raw, but it's much better cooked.</description>
   <graphicData>
      <texPath>Things/AnimalProduct/RT_MetroidEgg</texPath>
    </graphicData>
    <statBases>
      <MarketValue>60.0</MarketValue>
    </statBases>
    <comps>
      <li Class="CompProperties_Hatcher">
        <hatcherDaystoHatch>6.5</hatcherDaystoHatch>
        <hatcherPawn>RT_MetroidLarvae</hatcherPawn>
      </li>
    </comps>
  </ThingDef>

</Defs>
