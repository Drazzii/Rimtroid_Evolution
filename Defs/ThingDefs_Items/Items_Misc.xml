<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- =============== Aeion items =============== -->
  <ThingDef ParentName="ResourceBase">
    <defName>RT_AeionExtract</defName>
    <label>aeion extract</label>
    <description>A sealed canister, filled with a unique substance that originates from a distant asteroid belt. Studies have shown it is one of the only materials that can freely bypass the metroid immune system, making it essential in items that modify their genetic structure. Otherwise, it has next to no uses.\n\nCan be bought from traders, and sometimes given as rewards for quests.</description>
    <graphicData>
      <texPath>Things/Resource/RT_AeionExtract</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.75</drawSize>
    </graphicData>
    <uiIconScale>1.5</uiIconScale>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>50</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>200</MarketValue>
      <Mass>0.2</Mass>
      <Flammability>0</Flammability>
      <DeteriorationRate>1.0</DeteriorationRate>
    </statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <thingSetMakerTags><li>RewardStandardHighFreq</li></thingSetMakerTags>
  </ThingDef>

</Defs>